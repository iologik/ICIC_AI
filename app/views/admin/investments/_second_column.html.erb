    <div class="xe-label">
      <strong class="num blue"><%= usd_retained_sum_until_now %> USD</strong>
      <span style="text-align: left;">Interest Reserve Until Now Subs</span>
      <span class="exchange-rand-rate last-year-date"><%= (Time.zone.today - 1.year).at_end_of_year.strftime('%Y-%m-%d') %></span>
    </div>
  </div>
<% end %>

