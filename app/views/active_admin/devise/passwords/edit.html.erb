<div id="canvas">

  <header id="page-header">
    <div class="container text-align-center">
      <h1>Change your password</h1>
    </div>
  </header>

  <div id="page-content">
    <div class="container">
      <div class="module mb-15 module-standalone">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :put) do |f| %>
            <div class="module-section" style="border: none;">

              <div class="field-group">
                <%= render 'shared/messages' %>
              </div>

              <div class="field-group">
                <%= f.label :password %><br />
                <%= f.password_field :password %>
                <% password_errors = f.object.errors.messages[:password] %>
                <% if password_errors %>
                    <% password_errors.each do |msg| %>
                        <div class="flash-error">
                          <%= msg %>
                        </div>
                    <% end %>
                <% end %>
              </div>

              <div class="field-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation %>
              </div>
            </div>

            <div class="module-section text-align-right">
              <%= f.text_field :reset_password_token, :type => :hidden, :value => resource.reset_password_token %>
              <%= f.submit t('active_admin.devise.change_password.submit'), class: 'button button-blue' %>
            </div>

            <!--<div class="actions">-->
            <!---->
            <!--</div>-->
        <% end %>

      </div>
      <!--<div class="text-align-center small muted has-module-spacing">-->
      <!--Not a member of Fundrise? <a href="/signup/start?source=login-form">Open an account &rarr;</a>-->
      <!--</div>-->
    </div>
  </div>

  <%#= render 'layouts/footer' %>

</div>