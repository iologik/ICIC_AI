<div id="canvas">

  <header id="page-header">
    <div class="container text-align-center">
      <h1>Forgot your password?</h1>
    </div>
  </header>

  <div id="page-content">
    <div class="container">
      <div class="module mb-15 module-standalone">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
            <div class="module-section" style="border: none;">

              <div class="field-group">
                <%= render 'shared/messages' %>
              </div>

              <div class="field-group">
                <%= f.label :email %>
                <br/>
                <%= f.email_field :email, autofocus: true %>
                <% email_error = f.object.errors.messages[:email] %>
                <% if email_error %>
                    <% email_error.each do |msg| %>
                        <div class="flash-error">
                          <%= msg %>
                        </div>
                    <% end %>
                <% end %>
              </div>
            </div>

            <div class="module-section text-align-right">
              <%#= f.submit "Log in", class: 'button button-blue' %>
              <%= f.submit t('active_admin.devise.reset_password.submit'), class: 'button button-blue' %>
            </div>

            <!--<div class="actions">-->
            <!---->
            <!--</div>-->
        <% end %>

      </div>
      <!--<div class="text-align-center small muted has-module-spacing">-->
      <!--Not a member of Fundrise? <a href="/signup/start?source=login-form">Open an account &rarr;</a>-->
      <!--</div>-->
    </div>
  </div>

  <%#= render 'layouts/footer' %>
</div>